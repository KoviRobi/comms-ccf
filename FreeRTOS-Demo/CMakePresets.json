{
  "version": 6,
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "toolchainFile": "gcc-arm-embedded.cmake",
      "binaryDir": "build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "debug",
      "inherits": "defaults",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "release",
      "inherits": "defaults",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "minsizerel",
      "inherits": "defaults",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "MinSizeRel" }
    }
  ],
  "buildPresets": [
    { "name": "run", "hidden": true, "targets": ["run"] },
    { "name": "debug", "configurePreset": "debug" },
    { "name": "release", "configurePreset": "release" },
    { "name": "minsizerel", "configurePreset": "minsizerel" },
    { "name": "run-debug", "inherits": ["debug", "run"] },
    { "name": "run-release", "inherits": ["release", "run"] },
    { "name": "run-minsizerel", "inherits": ["minsizerel", "run"] }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        { "type": "configure", "name": "debug" },
        { "type": "build", "name": "debug" }
      ]
    },
    {
      "name": "release",
      "steps": [
        { "type": "configure", "name": "release" },
        { "type": "build", "name": "release" }
      ]
    },
    {
      "name": "minsizerel",
      "steps": [
        { "type": "configure", "name": "minsizerel" },
        { "type": "build", "name": "minsizerel" }
      ]
    },
    {
      "name": "run-debug",
      "steps": [
        { "type": "configure", "name": "debug" },
        { "type": "build", "name": "run-debug" }
      ]
    },
    {
      "name": "run-release",
      "steps": [
        { "type": "configure", "name": "release" },
        { "type": "build", "name": "run-release" }
      ]
    },
    {
      "name": "run-minsizerel",
      "steps": [
        { "type": "configure", "name": "minsizerel" },
        { "type": "build", "name": "run-minsizerel" }
      ]
    }
  ]
}
