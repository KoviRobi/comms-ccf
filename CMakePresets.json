{
  "version": 6,
  "configurePresets": [
    {
      "name": "defaults",
      "hidden": true,
      "binaryDir": "build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "debug",
      "inherits": "defaults",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "release",
      "inherits": "defaults",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    }
  ],
  "buildPresets": [
    { "name": "debug", "configurePreset": "debug" },
    { "name": "release", "configurePreset": "release" }
  ],
  "testPresets": [
    {
        "name": "defaults",
        "hidden": true,
        "output": {
            "outputOnFailure": true,
            "outputLogFile": "${fileDir}/test.log",
            "outputJUnitFile": "${fileDir}/test.junit",
            "maxPassedTestOutputSize": 307200,
            "maxFailedTestOutputSize": 307200
        }
    },
    { "name": "debug", "configurePreset": "debug", "inherits": "defaults" },
    { "name": "release", "configurePreset": "release", "inherits": "defaults"  }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        { "type": "configure", "name": "debug" },
        { "type": "build", "name": "debug" }
      ]
    },
    {
      "name": "release",
      "steps": [
        { "type": "configure", "name": "release" },
        { "type": "build", "name": "release" }
      ]
    },
    {
      "name": "debug-test",
      "steps": [
        { "type": "configure", "name": "debug" },
        { "type": "build", "name": "debug" },
        { "type": "test", "name": "debug" }
      ]
    },
    {
      "name": "test",
      "steps": [
        { "type": "configure", "name": "release" },
        { "type": "build", "name": "release" },
        { "type": "test", "name": "release" }
      ]
    }
  ]
}
